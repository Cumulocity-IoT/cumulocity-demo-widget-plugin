      "globalTitle": "Cumulocity Demo Widget with Module Federation",
      "tabsHorizontal": true,
      "isPackage": true,
      "noAppSwitcher": true,
      "package": "plugin",
      "requiredPlatformVersion": ">=1014.0.0",
      "exports": [
        {
          "name": "Cumulocity Demo widget plugin",
          "module": "GpDemoWidgetModule",
          "path": "./widget/gp-demo-widget.module.ts",
          "description": "Sample Demo Widget"
        }
      ],
      "remotes": {
        "widget-plugin": [
          "GpDemoWidgetModule"
        ]
      }
    },
    "cli": {}
  },
  "browserslist": [
    "last 2 major versions"
